<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:background="@drawable/stoken_round_background"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:text="我的留言"
        android:drawableRight="@drawable/ic_next"
        android:textSize="20sp"
        android:textColor="@color/navi_unchecked"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/info" />

    <TextView
        android:id="@+id/push"
        android:layout_width="0dp"
        android:background="@drawable/stoken_round_background"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:text="推送开关"
        android:drawableRight="@drawable/ic_next"
        android:textSize="20sp"
        android:textColor="@color/navi_unchecked"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/account" />
    <TextView
        android:id="@+id/suggest"
        android:layout_width="0dp"
        android:background="@drawable/stoken_round_background"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:text="建议反馈"
        android:drawableRight="@drawable/ic_next"
        android:textSize="20sp"
        android:textColor="@color/navi_unchecked"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/push" />
    <TextView
        android:id="@+id/about"
        android:layout_width="0dp"
        android:background="@drawable/stoken_round_background"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:text="关于"
        android:drawableRight="@drawable/ic_next"
        android:textSize="20sp"
        android:textColor="@color/navi_unchecked"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/suggest" />
    <TextView
        android:id="@+id/account"
        android:layout_width="0dp"
        android:background="@drawable/stoken_round_background"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:text="账号设置"
        android:drawableRight="@drawable/ic_next"
        android:textSize="20sp"
        android:textColor="@color/navi_unchecked"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/message" />

    <TextView
        android:id="@+id/info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/stoken_round_background"
        android:text="姓名：XXX \n手机号：123xxx777xxx"
        android:textSize="22sp"
        android:gravity="center"
        android:padding="16dp"
        android:lineSpacingExtra="8dp"
        android:textColor="@color/navi_unchecked"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.501" />


</android.support.constraint.ConstraintLayout>